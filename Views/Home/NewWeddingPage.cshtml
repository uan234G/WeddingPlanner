@model Wedding

<h1>Plan Your Wedding <a href="/dashboard" class="btn btn-primary">Dashboard</a> <a href="/logout" class="btn btn-danger">Log Out</a></h1>
<form asp-action="CreateWedding" asp-controller="Home" method="POST">
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="WedderOne"></span>
        <label>Wedder One</label>
        <input asp-for="WedderOne" class="form-control">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="WedderTwo"></span>
        <label>WedderTwo</label>
        <input asp-for="WedderTwo" class="form-control">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="Date"></span>
        <label>Date</label>
        <input asp-for="Date" class="form-control">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="Address"></span>
        <label>Adress</label>
        <input asp-for="Address" class="form-control">
    </div>
    <button class="btn btn-success" >Submit</button>
</form>
