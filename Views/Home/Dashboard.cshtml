@model List<Wedding>
<h1>Welcome to Wedding Planner</h1>
<a href="/logout"><button>Logout</button></a>

<table class="table table-striped table-light">
    <thead>
        <tr>
            <th scope="col">Wedding</th>
            <th scope="col">Date</th>
            <th scope="col">Guest</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wedding in Model)
        {
            <tr>
                <td><a asp-route-wId="@wedding.WeddingId" asp-action="WeddingInfo">@wedding.WedderOne & @wedding.WedderTwo</a> 
                </td>
                <td>@wedding.Date</td>
                <td>@wedding.Associations.Count</td>
                    @if (wedding.UserId == ViewBag.UserId)
                {
                    <td><a asp-action="Delete" asp-controller="Home" asp-route-wId="@wedding.WeddingId">Delete</a></td>
                }
                else if (wedding.Associations.Any(a => a.UserId == ViewBag.UserId))
                {
                    <td><a asp-action="UnRSVP" asp-controller="Home" asp-route-wId="@wedding.WeddingId">Un-RSVP</a></td>
                }
                else
                {
                    <td><a asp-action="RSVP" asp-controller="Home" asp-route-wId="@wedding.WeddingId">RSVP</a></td>
                }
            </tr>
        }
    </tbody>
</table>

<a asp-action="NewWeddingPage"><button>Plan New Wedding</button></a>