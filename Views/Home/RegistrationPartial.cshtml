/* BOX LOGIN */
.box{
	position: relative;
	@* margin: auto; *@
	height: 650px;
    top: 40px;
	left: 0;
	z-index: 200;
	right: 0;
	width:400px;
	color:#666;
	padding:10px 0px;
	border-radius: 10px;
	background-color:rgba(0, 0, 0, 0) !important;
	border-top: 2px solid #C0C0C0;
	border-bottom: 2px solid #cea764;
