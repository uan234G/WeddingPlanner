}
.box h1{
	text-align:center;
	font-size:30px;
}

.show{
	display:block;
}

.box button{
	background:#e1c99f;
	border:0;
	color:#fff;
	padding:10px;
	font-size:20px;
	width:330px;
	margin:20px auto;
	display:block;
	cursor:pointer;
